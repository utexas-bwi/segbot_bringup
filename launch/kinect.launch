<launch>

  <arg name="camera" default="camera" />
  <arg name="manager" value="$(arg camera)_nodelet_manager" />
  <arg name="ns" default="" />

  <!-- Kinect -->
  <include file="$(find segbot_navigation)/launch/openni.launch">
    <arg name="camera" value="$(arg camera)" />
    <arg name="ns" value="$(arg ns)" />
    <arg name="publish_tf" value="false" />
  </include>

  <!-- throttling -->
  <node pkg="nodelet" type="nodelet" name="pointcloud_throttle" args="load pointcloud_to_laserscan/CloudThrottle $(arg manager)" respawn="true">
    <param name="max_rate" value="20.0"/>
    <remap from="cloud_in" to="$(arg camera)/depth/points"/>
    <remap from="cloud_out" to="cloud_throttled"/>
  </node>

  <!-- Fake Laser -->
  <node pkg="nodelet" type="nodelet" name="kinect_laser" args="load pointcloud_to_laserscan/CloudToScan $(arg manager)" respawn="true">
    <param name="output_frame_id" value="$(arg ns)/$(arg camera)_depth_frame"/>
    <!-- heights are in the (optical?) frame of the kinect -->
    <param name="min_height" value="-0.15"/>
    <param name="max_height" value="0.15"/>
    <remap from="cloud" to="cloud_throttled"/>
  </node>

  <!-- Fake Laser (narrow one, for localization -->
  <node pkg="nodelet" type="nodelet" name="kinect_laser_narrow" args="load pointcloud_to_laserscan/CloudToScan $(arg manager)" respawn="true">
    <param name="output_frame_id" value="$(arg ns)/$(arg camera)_depth_frame"/>
    <!-- heights are in the (optical?) frame of the kinect -->
    <param name="min_height" value="-0.025"/>
    <param name="max_height" value="0.025"/>
    <remap from="cloud" to="cloud_throttled"/>
    <remap from="scan" to="narrow_scan"/>
  </node>

</launch>

