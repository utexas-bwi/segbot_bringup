<launch>

  <!-- set the tf prefix as necessary -->
  <arg name="tf_prefix" default="" />
  <arg name="device_id" default="#1" />
  <param name="tf_prefix" value="$(arg tf_prefix)" />

  <!-- launch the auxiliary configuration (shared between h/w and simulation) -->
  <include file="$(find segbot_bringup)/launch/includes/auxiliary.segbot_kinect_scan.launch.xml">
    <arg name="name" value="nav_kinect" />
    <arg name="tf_prefix" value="$(arg tf_prefix)" />
  </include>

  <!-- launch the segway base -->
  <include file="$(find segbot_bringup)/launch/segway_base.launch" />

  <!-- launch the kinect sensor in laserscan configuration -->
  <include file="$(find segbot_sensors)/launch/kinect/kinect.launch">
    <arg name="name" value="nav_kinect" />
    <arg name="tf_prefix" value="$(arg tf_prefix)" />
    <arg name="device_id" value="$(arg device_id)" />
    <arg name="depth_only" value="true" />
  </include>

  <!-- launch the hokuyo sensor -->
  <include file="$(find segbot_sensors)/launch/hokuyo/hokuyo.launch">
    <arg name="name" value="nav_hokuyo" />
    <arg name="tf_prefix" value="$(arg tf_prefix)" />
    <arg name="publish_tf" value="false" /> <!-- already published by urdf -->
  </include>

  <!-- COMMON aux information -->

  <arg name="kinect_name" default="nav_kinect" /> 
  <arg name="tf_prefix" default="" /> 
  <arg name="use_full_gazebo_model" default="false" />
  <arg name="urdf_file" default="$(find segbot_description)/robots/segbot_navigation.urdf.xacro" />
  <arg name="use_registered_topic" default="false" />

  <!-- launch the appropriate urdf description, as well as the corresponding tf tree -->
  <param name="robot_description" 
    command="$(find xacro)/xacro.py '$(arg urdf_file)' use_full_gazebo_model:=$(arg use_full_gazebo_model)" />

  <!-- launch the tf tree -->
  <node pkg="segbot_bringup" type="segbot_state_publisher" name="robot_state_publisher">
  <!-- <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"> -->
    <param name="publish_frequency" type="double" value="5.0" />
  </node>

  <!-- launch the joint state publisher to default values -->
  <node pkg="joint_state_publisher" type="joint_state_publisher" name="joint_state_publisher" />

  <!-- KINECT specific stuff -->

  <!-- launch the kinect laserscan converter -->
  <include file="$(find segbot_sensors)/launch/kinect/kinect-laserscan.launch">
    <arg name="tf_prefix" value="$(arg tf_prefix)" />
    <arg name="camera" value="$(arg kinect_name)" />
    <arg name="use_registered" value="$(arg use_registered_topic)" />
    <arg name="out_topic" value="$(kinect_name)/scan_filtered" />
  </include>

  <!-- set additional tf prefix parameter - required for gazebo -->
  <param name="$(arg name)/tf_prefix" value="$(arg tf_prefix)" />

  <!-- HOKUYO specific stuff -->
  <!-- launch the laser filter to get rid of readings from the robot itself -->
  <include file="$(find segbot_sensors)/launch/hokuyo/hokuyo-filters.launch" />

</launch>
